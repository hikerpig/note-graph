{
  "name": "note-graph",
  "description": "a generic visualization tool designed to show the structure of the document space and the relations between each doc",
  "version": "0.0.2",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "cd demo && yarn start",
    "build": "microbundle --name NOTE_GRAPH --no-compress --globas d3=d3",
    "build-demo": "cd demo && yarn build",
    "ci-build": "cd demo && yarn && yarn build",
    "lint": "eslint src/**/*.ts"
  },
  "source": "src/index.ts",
  "main": "dist/note-graph.js",
  "umd:main": "dist/note-graph.umd.js",
  "module": "dist/note-graph.esm.js",
  "files": [
    "dist"
  ],
  "typings": "dist/type.d.ts",
  "author": "hikerpig",
  "keywords": [
    "graph",
    "visualization",
    "foam"
  ],
  "repository": {
    "type" : "git",
    "url" : "https://github.com/hikerpig/note-graph.git"
  },
  "dependencies": {
    "d3": "^6.2.0",
    "force-graph": "^1.35.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@typescript-eslint/parser": "^4.9.0",
    "core-js": "3",
    "eslint": "^7.14.0",
    "lerna": "^3.22.1",
    "microbundle": "^0.12.4",
    "typescript": "4"
  }
}
